<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ministerio - <%- title %></title>
    <%- include("partials/head")%>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include("partials/navigation")%>
    <div class="container">
        <h1 class="mt-4 mb-4"><%- title %></h1>
        <div class="card mb-4 animated fadeInDown border-0">                
            </div>
        <% if(pilas == "") { %>
            <div class="card mb-4 border-0">                
                <div class="card-body text-center">
                    <p>No hay datos para mostrar</p>
                </div>
            </div>
        <% }else { %>
            <div class="card-columns">
                <% pilas.forEach(function (pila) { %>
                <div class="card shadow rounded-top animated fadeInDown">
                    <a href="<%= url%><%= pila.path %>"> <img crossorigin="anonymous" src="<%= url%><%= pila.path %>" class="card-img-top" alt="<%= pila.filename %>"></a>
                    <% if(!pila.description){ %>
                        
                    <% }else { %>
                        <div class="card-body text-center">
                            <p>Descripci√≥n: <%= pila.description %></p>
                        </div>
                    <% } %>         
                    <div class="card-body d-flex justify-content-around">
                        <div>
                            
                        </div>
                        <div>
                            <button onclick="deleteFile('<%= pila._id%>')" class="shadow btn btn-danger">Eliminar <i class="fa-solid fa-trash"></i></button>
                        </div>
                    </div>           
                </div>
                <% }) %>
            </div>
        <% } %>
        <button onclick="uploadFile('<%- id%>', '<%- url%>')" class="botonF1">
            <span>+</span>
        </button>
    </div>
    <%- include("partials/footer")%>
</body>
</html>